{% extends 'accounts/base.html' %}
{% load static %}

{% block content %}

    
    <div class="container pl-lg-5 pl-md-5 pl-sm-0 pr-lg-5 pr-md-5 pr-sm-0">
        {% for event in upcoming_events %}
            <div class="mb-0 mt-5 p-3 row" style="background-color: rgb(252, 173, 15); border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <div class="col-sm-8 mx-auto rounded">
                    <div class="row">
                        <h1 style="font-family: arial;" class="pt-2 text-white"><i><b>{{ event.name }}</b></i></h1>
                    </div>
                    <div class="row">
                        <div>
                            <ul class="list-group text-center" style="font-size: 20px;">
                                <li class="font-weight-bold list-group-item list-group-item-secondary p-sm-1 text-primary">{{ event.when | date:'M j' }}</li>
                                <li class="bg-primary list-group-item p-sm-1 text-white">{{ event.when | date:'D' }}</li>
                            </ul>
                        </div>
                        <div class="col-sm-8">
                            <ul class="list-group">
                                <h4>@ Rocky Hill High School</h4>
                                <h5>Status: <i>Active</i></h5> 
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <span class="badge badge-success mt-3 p-2" style="font-weight: 400; font-size: 18px; border-radius: 10px;">minimum $5 buy-in</span>
                    </div>                     
                </div>
                <div class="col-md-4 col-sm-3">
                    <img src="file:///C:/Users/kinsh/Desktop/business/design/website/pinegrow_events/assets/img/track_logo.png" class="img-fluid"> 
                </div>
            </div>
            <div class="font-weight-bold justify-content-center mt-0 p-2 row text-white" style="background-color: #fd850a; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; cursor: pointer;">MORE</div>
        {% endfor %}
    </div>

{% endblock %}